<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.understandinglifecycle.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />


    <action
        android:id="@+id/action_homeFragment_to_anotherFragment"
        app:destination="@id/anotherFragment" />

    <action
        android:id="@+id/action_homeFragment_to_mainActivity2"
        app:destination="@id/mainActivity2" />

    <fragment
        android:id="@+id/anotherFragment"
        android:name="com.example.understandinglifecycle.view.AnotherFragment"
        android:label="fragment_another"
        tools:layout="@layout/fragment_another" />


    <activity
        android:id="@+id/mainActivity2"
        android:name="com.example.understandinglifecycle.MainActivity2"
        android:label="activity_main2"
        tools:layout="@layout/activity_main2" />
</navigation>